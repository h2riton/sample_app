<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="tournament">Nouveau tournoi</h1>
        <%= render 'shared/tournament_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
<% else %>

<h1>Beloty</h1>

<p>
  Site Impact en partenariat avec l'
  <a href="http://eleves.ec-lille.fr/">Ecole centrale de Lille</a>
</p>

<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>